{
  "manifest_version": 3,
  "name": "Amazon Search Assistant",
  "version": "1.0",
  "permissions": [
    "activeTab",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "*://*.amazon.com/*",
    "*://*.amazon.ca/*",
    "*://*.amazon.co.uk/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/product_info.png",
      "48": "icons/product_info.png",
      "128": "icons/product_info.png"
    }
  },
  "icons": {
    "16": "icons/product_info.png",
    "48": "icons/product_info.png",
    "128": "icons/product_info.png"
  }
}
